<?xml version="1.0" encoding="utf-8" ?>
<xf:BottomBarPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:xf="clr-namespace:BottomBar.XamarinForms;assembly=BottomBar.XamarinForms"
             xmlns:local="clr-namespace:BottomNavBarApp.Views"
             x:Class="BottomNavBarApp.Views.MainPage"
             Title="{Binding Title}">

    <local:Tab1Page Title="Tab 1"
                    Icon="ic_friends.png" />
    
    <local:Tab1Page Title="Tab 2"
                    Icon="ic_favorites.png" />
    
    <local:Tab1Page Title="Tab 3"
                    Icon="ic_nearby.png" />

    <ContentPage Title="Tab 1"
                 Icon="ic_friends.png"
                 xf:BottomBarPageExtensions.TabColor="Beige" />

    <ContentPage Title="Tab 2"
                 Icon="ic_friends.png"
                 xf:BottomBarPageExtensions.TabColor="Azure" />

    <ContentPage Title="Tab 3"
                 Icon="ic_friends.png"
                 xf:BottomBarPageExtensions.TabColor="Black" />

</xf:BottomBarPage>