<?xml version="1.0" encoding="utf-8" ?>
<xg:BottomBarPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BottomNavigationBarExample.Views.MainPage"
             xmlns:pages="clr-namespace:BottomNavigationBarExample.Views"
             xmlns:xg="clr-namespace:BottomBar.XamarinForms;assembly=BottomBar.XamarinForms"
             Title="{Binding Title}">

    <pages:Tab1Page
        Title="Test Tab 1"
        Icon="ic_friends.png" />
    
    <pages:Tab2Page
        Title="Test Tab 2"
        Icon="ic_favorites.png" />
    
    <pages:Tab3Page
        Title="Test Tab 3"
        Icon="ic_nearby.png" />

    <ContentPage Title="Tab 1"
                 Icon="ic_friends.png"
                 xg:BottomBarPageExtensions.TabColor="Blue" />

    <ContentPage Title="Tab 2"
                 Icon="ic_favorites.png"
                 xg:BottomBarPageExtensions.TabColor="Beige" />

    <ContentPage Title="Tab 3"
                 Icon="ic_nearby.png"
                 xg:BottomBarPageExtensions.TabColor="AntiqueWhite" />
    
</xg:BottomBarPage>